<form id="planning_form"
      name="planning_form"
      method="post"
      action="[% c.uri_for(c.controller.action_for('post_form')) %]"
      enctype="multipart/form-data">
  
  <div id="main_imput">
    <h2>Create New Planning</h2>
    <div class="row">
      <div id="input_name" class="col">
	<div class="col-8">
	  [%~ INCLUDE layout/champ.tt
	  nom="planning_name" valeur="$valid_args.planning_name"
	  label="Nom du Planning" msg="$msgs.planning_name" %]
	</div>
      </div>
      
      <div id="main_controller" class="col">
	<!--Bouton de validation du nom et display du reste du form-->
	<button id="valid_name" type="button" class="btn-success">Poursuivre</button>
	<button id="valid_week" type="button" class="btn-success" style="display:none;">Poursuivre</button>
	<button id="valid_sday" type="submit" class="btn-success" style="display:none;">Valider la Creation</button>
      </div>
    </div>
  </div>
  
  <div id="main_week">
    <h3 id="main_week_header" style="display:none;">Week Edition</h3>
    <div id="week_validated">
    </div>
    <div id="week_controller" tabindex="-1">
      <h3 id="week_controller_header" style="display:none;">Week Controller</h3>
    </div>
    <div id="week_edition" tabindex="-1">
    </div>
  </div>

  <div id="main_sday">
    <h3 id="main_sday_header" style="display:none;">Special Day Edition</h3>
    <div id="sday_validated">
    </div>
    <div id="sday_controller">
    </div>
    <div id="sday_edition">
    </div>
  </div>
