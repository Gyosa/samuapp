package Object::ListUser;

#use namespace::autoclean;
use strict;
use warnings;


sub new {
	my ($class, $args) = @_;
	my $self =  {nb_users => $args->{nb_users},
					  users  => $args->{users}
	};
	#$self->set_nb_users;
	$self->{users} //= []; 
	bless($self, $class);
}

# get nb_users of the user
sub get_nb_users{
	my $self = shift;
	#set_nb_user();
    return $self->{nb_users};
}
 
# set nb_users for the user
sub set_nb_users{
	my $self = shift;
	#my $temp = $self->get_users;
    $self->{nb_users} = scalar($self->get_users);
}

sub get_users{
	my $self = shift;
	my $temp = $self->{users}
	return @$temp;
}
sub set_users{
	my ($self, $new_users) = @_;
    $self->{user} = $new_users;
}
